{
  "authentication": {
    "jwt": {
      "secret_key": "${JWT_SECRET_KEY}",
      "algorithm": "HS256",
      "access_token_expire_minutes": 30,
      "refresh_token_expire_days": 7
    },
    "password_policy": {
      "min_length": 12,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_digits": true,
      "require_special_chars": true,
      "max_age_days": 90
    }
  },
  "api_security": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    },
    "cors": {
      "allowed_origins": ["${ALLOWED_ORIGINS}"],
      "allowed_methods": ["GET", "POST", "PUT", "DELETE"],
      "allowed_headers": ["*"],
      "allow_credentials": true
    },
    "headers": {
      "x_frame_options": "DENY",
      "x_content_type_options": "nosniff",
      "x_xss_protection": "1; mode=block",
      "strict_transport_security": "max-age=31536000; includeSubDomains"
    }
  },
  "encryption": {
    "algorithm": "AES-256-GCM",
    "key_derivation": "PBKDF2",
    "iterations": 100000
  },
  "logging": {
    "security_events": {
      "enabled": true,
      "level": "INFO",
      "file": "logs/security.log"
    },
    "audit_trail": {
      "enabled": true,
      "retention_days": 365
    }
  },
  "secrets_management": {
    "provider": "environment",
    "fallback_provider": "file",
    "encrypted_file_path": "${ENCRYPTED_SECRETS_PATH}"
  },
  "_security_notes": [
    "IMPORTANT: Set JWT_SECRET_KEY environment variable with a strong random key",
    "IMPORTANT: Configure ALLOWED_ORIGINS for CORS in production",
    "IMPORTANT: Use HTTPS in production environments",
    "IMPORTANT: Regularly rotate JWT secret keys",
    "IMPORTANT: Implement proper user authentication against a database",
    "IMPORTANT: Enable rate limiting to prevent abuse",
    "IMPORTANT: Log all security events for monitoring"
  ]
} 